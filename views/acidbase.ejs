<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport"
        content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Acid-Base Titration</title>
    <link rel="stylesheet" href="./styles/simulation.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="./styles/fancyselect.min.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Acme&family=Montserrat:wght@100&family=Poppins:ital,wght@1,300&family=Roboto+Mono&family=Roboto:wght@100;400&display=swap"
        rel="stylesheet">
</head>

<body>
    <%- include("./partials/header"); %>

        <div class="text-center mt-1">Acid-Base Titration</div>
        <main>
            <div class="container customcontainer">
                <div class="left-panel">
                    <form id="data">
                        <div>
                            <label for="titrants">Titrant : </label>
                            <select id="titrants"></select>
                        </div>
                        <div>
                            <label for="speed">Speed of Titrant : </label>
                            <input id="speed" type="range" value="0.1" min="0.1" max="1" step="0.1"
                                oninput="this.nextElementSibling.value = this.value">
                            <output>0.1</output>
                        </div>
                        <div>
                            <label for="titrates"> Titrate(Analyte) : </label>
                            <select id="titrates"></select>
                        </div>
                        <div>
                            <label for="concentration">Normality of Titrant : </label>
                            <input id="concentration" type="range" value="0.1" min="0.1" max="2" step="0.1"
                                oninput="this.nextElementSibling.value =this.value">
                            <output>0.1</output><span> N</span>
                        </div>
                        <div>
                            <label for="Volume">Volume of Titrate(Analyte) : </label>
                            <input id="Volume" type="range" value="10" min="10" max="20" step="1"
                                oninput="this.nextElementSibling.value = this.value">
                            <output>10</output><span> ml</span>
                        </div>
                        <div>
                            <label for="indicators">Indicator : </label>
                            <select id="indicators"></select>
                        </div>
                        <button id="startBtn" class="simulationBtn" type="button" onclick="startdrip()">Start</button>
                        <button id="resetBtn" class="simulationBtn disabled" type="button" onclick="resetdrip()"
                            disabled>Reset</button>
                    </form>
                </div>

                <div class="middle-panel">
                    <div class="experiment">
                        <div>
                            <%- include("./partials/experiment-setup.svg"); %>
                        </div>
                    </div>
                </div>

                <div class="right-panel" id="rightPanel">
                    <div id="message">Result will be displayed Here...</div>
                    <div id="details"></div>
                    <div id="titrant-used"></div>
                    <div id="calculation"></div>
                </div>
            </div>
        </main>
        <%- include("./partials/footer.ejs") %>
</body>

<script src="./scripts/acidbase.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
    crossorigin="anonymous"></script>

<script type="text/javascript" src="./scripts/fancyselect.min.js"></script>

</html>