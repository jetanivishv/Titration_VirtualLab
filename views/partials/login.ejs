<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />


<form action="/login" method="POST">
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-4 text-center w-100" id="exampleModalLabel">Sign in</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex flex-row align-items-center justify-content-center">
                        <p class="lead fw-normal mb-0 me-3">Sign in with</p>
                        <a href="/google" class="btn btn-primary btn-floating mx-1">
                            <i class="fab fa-google"></i>
                        </a>
                    </div>

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0">Or</p>
                    </div>

                    <div class="form-outline mb-4 p-1">
                        <input type="text" id="username" name="username" class="form-control" required />
                        <label class="form-label" for="username">Username</label>
                    </div>

                    <div class="form-outline mb-4 p-1">
                        <input type="password" id="password" name="password" class="form-control" required />
                        <label class="form-label" for="password">Password</label>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

                    <!-- login buttons -->
                    <div class="text-center">
                        <p class="text-center">Don't have an Account? <a data-bs-toggle="modal" href=""
                                data-bs-target="#signupModal">Register</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


<!-- MDB -->
<script type=" text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.js"></script>