<svg xmlns="http://www.w3.org/2000/svg" style="display: none">
    <symbol id="exclamation-triangle-fill" fill="white" viewBox="0 0 16 16">
        <path
            d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
    </symbol>
</svg>


<% if(message && message.length){ %>
    <div class="alert alert-dismissible fade show shadow flash-message"
        style="background-color: rgba(251, 28, 28, 0.826); color: white;" role="alert">
        <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Danger:" width="24" height="24">
            <use xlink:href="#exclamation-triangle-fill" />
        </svg>
        <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>


        <style>
            /* Error flash message animation */
            @keyframes error-message {
                from {
                    opacity: 1;
                }

                to {
                    opacity: 0;
                }
            }

            /* Flash message style */
            .flash-message {
                animation-delay: 5s;
                animation-duration: 0.1s;
                animation-timing-function: ease-out;
                animation-fill-mode: forwards;
                width: 50%;
                margin: auto;
                margin-top: 10px;
            }



            /* Error flash message style */
            .flash-message {
                animation-name: error-message;
            }
        </style>